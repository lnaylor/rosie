# elaborate problem-space attend-to-all-perception
sp {op_turn-off1*elaborate*problem-space*attend-to-all-perception*yes
   (state <s> ^name op_turn-off1
              ^problem-space.execution-type external
              ^problem-space.perception <p>)
-->
   (<p> ^attend-to-all-perception yes)
}

sp {op_turn-off1*elaborate*target-object*arg1
   (state <s> ^name op_turn-off1
              ^action-operator.arg1.id <obj>)
-->
   (<s> ^target-object <obj>)
}

sp {op_turn-off1*elaborate*executing-command*true
   (state <s> ^name op_turn-off1
              ^current-action.turn-off-command.status sent)
-->
   (<s> ^executing-command true)
}

sp {op_turn-off1*elaborate*allow-wait*true
   (state <s> ^name op_turn-off1
              ^executing-command true)
-->
   (<s> ^propose-wait true)
}

#### GOAL SATISFACTION ####
sp {op_turn-off1*elaborate*desired*satisfied
   (state <s> ^name op_turn-off1
              ^target-object.predicates.activation1 off2)
-->
   (<s> ^desired.satisfied true)
}
